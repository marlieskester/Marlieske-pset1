<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.marlieske.marlieske_pset1.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mr_potato_1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_marginBottom="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <CheckBox
                android:text="Nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxNose"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:onClick="onCheckboxClicked"
                android:layout_below="@+id/checkBoxEyes"
                android:layout_alignLeft="@+id/checkBoxEyes"
                android:layout_alignStart="@+id/checkBoxEyes" />

            <CheckBox
                android:text="Shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxShoes"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:onClick="onCheckboxClicked"
                android:layout_below="@+id/checkBoxNose"
                android:layout_alignLeft="@+id/checkBoxNose"
                android:layout_alignStart="@+id/checkBoxNose" />

            <CheckBox
                android:text="Hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxHat"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:visibility="visible"
                android:onClick="onCheckboxClicked"
                android:layout_below="@+id/checkBoxShoes"
                android:layout_alignLeft="@+id/checkBoxShoes"
                android:layout_alignStart="@+id/checkBoxShoes" />

            <CheckBox
                android:text="Mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:id="@+id/checkBoxMouth"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_below="@+id/checkBoxHat"
                android:layout_alignRight="@+id/checkBoxShoes"
                android:layout_alignEnd="@+id/checkBoxShoes" />

            <CheckBox
                android:text="Glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxGlasses"
                android:onClick="onCheckboxClicked"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/checkBoxShoes"
                android:layout_toEndOf="@+id/checkBoxShoes" />

            <CheckBox
                android:text="Ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxEars"
                android:onClick="onCheckboxClicked"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_below="@+id/checkBoxGlasses"
                android:layout_toRightOf="@+id/checkBoxShoes"
                android:layout_toEndOf="@+id/checkBoxShoes"  />

            <CheckBox
                android:text="Mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxMustache"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:onClick="onCheckboxClicked"
                android:layout_below="@+id/checkBoxEars"
                android:layout_toRightOf="@+id/checkBoxShoes"
                android:layout_toEndOf="@+id/checkBoxShoes" />

            <CheckBox
                android:text="Arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxArms"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:onClick="onCheckboxClicked"
                android:layout_below="@+id/checkBoxMustache"
                android:layout_toRightOf="@+id/checkBoxShoes"
                android:layout_toEndOf="@+id/checkBoxShoes" />

            <CheckBox
                android:text="Eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxEyebrows"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:onClick="onCheckboxClicked"
                android:layout_below="@+id/checkBoxArms"
                android:layout_alignRight="@+id/checkBoxMustache"
                android:layout_alignEnd="@+id/checkBoxMustache" />

            <CheckBox
                android:text="Eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxEyes"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_alignBaseline="@+id/checkBoxGlasses"
                android:onClick="onCheckboxClicked"
                android:layout_alignBottom="@+id/checkBoxGlasses"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="91dp"
                android:layout_marginStart="91dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dress Mr Potatohead!"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:id="@+id/textView"
                android:layout_above="@+id/checkBoxGlasses"
                android:layout_alignRight="@+id/checkBoxGlasses"
                android:layout_alignEnd="@+id/checkBoxGlasses"
                android:layout_marginBottom="21dp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="330dp">
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true">-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body"
            android:id="@+id/imageViewBody"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shoes"
            android:visibility="invisible"
            android:id="@+id/imageViewShoes" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mouth"
            android:visibility="invisible"
            android:id="@+id/imageViewMouth" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mustache"
            android:visibility="invisible"
            android:id="@+id/imageViewMustache" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nose"
            android:visibility="invisible"
            android:id="@+id/imageViewNose" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hat"
            android:visibility="invisible"
            android:id="@+id/imageViewHat" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/glasses"
            android:visibility="invisible"
            android:id="@+id/imageViewGlasses" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ears"
            android:visibility="invisible"
            android:id="@+id/imageViewEars" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arms"
            android:visibility="invisible"
            android:id="@+id/imageViewArms" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyebrows"
            android:visibility="invisible"
            android:id="@+id/imageViewEyebrows" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyes"
            android:id="@+id/imageViewEyes"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
